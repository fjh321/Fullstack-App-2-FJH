        <h2>Add a food item and its calories</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="Type Food Item Here" name="foodListing">
            <input id="calNum" type="number" placeholder="number of calories" name="calories" min="0">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

        <div class="column1">
          <h3>All foods eaten</h3>
          <ul class="listOne">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].foodListing %></span>: Total Calories:
              <span><%= messages[i].calories  * (messages[i].upArrow -  messages[i].downArrow)%></span> , Quantity:
              <span><%= messages[i].upArrow -  messages[i].downArrow %></span>
              <svg class="upArrow" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"/></svg>
              <svg class="downArrow" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M169.4 470.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 370.8 224 64c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 306.7L54.6 265.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z"/></svg>

              <button class="deleteButton">Delete</button>
              <!-- <span><%= messages[i].thumbUp - messages[i].thumbDown %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span> -->
            </li>
          <% } %>
          </ul>

          <div class="column">
            <div class="listTwo">
              <h3>Foods of which you had more than one serving</h3>
              <ul id="moreThanOne">
                <% for (var i = 0; i < messages.length; i++) { %>
                    <% if (messages[i].upArrow - messages[i].downArrow > 1) { %>
                    <li class="complete">
                      <span><%= messages[i].foodListing %></span>:
                      <span><%= messages[i].calories  * (messages[i].upArrow -  messages[i].downArrow)%></span> Calories , Quantity:
                      <span><%= messages[i].upArrow -  messages[i].downArrow %></span>
                    </li>
                  <% } %>
                <% } %>
              </ul>
            </div>
          </div>
       

          

</div>

<script src="main.js"></script>

</body>
</html>
